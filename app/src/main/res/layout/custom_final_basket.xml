<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView

        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="left"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="#ffffff"
                    android:padding="16dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleCustomFinalBasket"
                        android:text="Dress"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#6b6969"
                        android:id="@+id/introCustomFinalBasket"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Includes trim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#6b6969"
                            android:textSize="16dp"
                            android:layout_marginTop="8dp"
                            android:text="Number:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#6b6969"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/countCustomFinalBasket"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:text="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:background="#ffffff"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgCustomFinalBasket"
                        android:scaleType="fitCenter"
                        android:src="@drawable/i1"
                        android:layout_width="100dp"
                        android:layout_height="140dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:background="#ffffff"
                android:padding="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:textColor="#696767"
                    android:textSize="18dp"
                    android:text="Price"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/totalCustomFinalBasket"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="3000000"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/deleteCustomFinalBasket"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="18dp"
                android:background="#ae054c"
                android:textColor="#ffffff"
                android:layout_marginRight="8dp"
                android:layout_gravity="right"
                android:padding="16dp"
                android:text="Delete"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:background="#469dbf"
            android:layout_height="1dp" />

    </android.support.v7.widget.CardView>

</LinearLayout>