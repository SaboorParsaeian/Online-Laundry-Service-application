<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f2ecf4fa"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.android.onlinelaundryservice.ActivityFinalBasket">

    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
        android:background="#469dbf"
        android:layout_height="?attr/actionBarSize"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="48dp"
                android:id="@+id/back"
                android:src="@drawable/back"
                android:scaleType="fitCenter"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Orders"
                android:paddingTop="8dp"
                android:textSize="22dp"
                android:layout_marginLeft="80dp"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" />




        </LinearLayout>

    </android.support.v7.widget.Toolbar>



    <android.support.v7.widget.CardView
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="#696767"
                android:textSize="18dp"
                android:text="Total"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtTotalPrice"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="3000000"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </android.support.v7.widget.CardView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearCustomBasket"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:background="#045e81"
                android:orientation="vertical"
                android:id="@+id/linearPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    android:text="Booking"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>









</LinearLayout>
