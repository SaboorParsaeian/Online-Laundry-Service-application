<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="left"
    android:layout_height="match_parent">

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_gravity="left"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#469dbf"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/laundry"
                    android:layout_height="100dp" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:background="#FF045E81"
                android:gravity="left"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_marginLeft="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/person"
                    android:layout_height="32dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:id="@+id/txtsign"
                android:text="SIGN IN/SIGN UP"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/userEmail"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FF045E81"
                android:gravity="left"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/logOut"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="32dp"
                        android:layout_marginLeft="40dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/openpadlock"
                        android:layout_height="32dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Log Out"
                        android:textColor="#ffffff"
                        android:layout_gravity="center_vertical"
                        android:textSize="18dp"
                        android:layout_height="wrap_content" />

                    </LinearLayout>



            </LinearLayout>





            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="#ae054c"
                android:gravity="left"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_marginLeft="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/search"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/txthome"
                    android:text="Coverage"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ListView
                android:layoutDirection="ltr"
                android:id="@+id/navigateListview"
                android:layout_width="match_parent"
                android:divider="@android:color/transparent"
                android:background="#ffffff"
                android:layout_height="wrap_content">

            </ListView>
                <ImageView
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_height="1dp" />

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/productListView"
                android:divider="@android:color/transparent"
                android:layout_height="wrap_content">

            </ListView>


            <ImageView
                android:layout_width="match_parent"
                android:background="#000000"
                android:layout_height="1dp" />

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/settingListView"
                android:divider="@android:color/transparent"
                android:layout_height="wrap_content">

            </ListView>




        </LinearLayout>

    </android.support.design.widget.NavigationView>

</LinearLayout>